<div class="timeline-section" style="
  --primary-color: {{ section.settings.primary_color }};
  --secondary-color: {{ section.settings.secondary_color }};
  --text-color: {{ section.settings.text_color }};
  --background-color: {{ section.settings.background_color }};
">
  <div class="timeline-container">
    {% if section.settings.section_title != blank %}
      <div class="timeline-header">
        <h2 class="timeline-title">{{ section.settings.section_title }}</h2>
        {% if section.settings.section_subtitle != blank %}
          <div class="timeline-subtitle">{{ section.settings.section_subtitle }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="timeline-wrapper">
      <div class="timeline-line"></div>
      
      {% for block in section.blocks %}
        <div class="timeline-item {{ block.settings.alignment }} timeline-item-{{ forloop.index }}" 
             data-vertical-offset="{{ block.settings.vertical_offset | default: 0 }}"
             {{ block.shopify_attributes }}>
          <div class="timeline-dot"></div>
          <div class="timeline-connector"></div>
          
          <div class="timeline-content images-{{ block.settings.position_style }}">
            <div class="timeline-text-cont">
              {% if block.settings.year != blank %}
                <div class="timeline-year">{{ block.settings.year }}</div>
              {% endif %}
              
              {% if block.settings.title != blank %}
                <div class="timeline-item-title">{{ block.settings.title }}</div>
              {% endif %}
              
              {% if block.settings.description != blank %}
                <div class="timeline-description">
                  {{ block.settings.description }}
                </div>
              {% endif %}
              
              {% if block.settings.highlight_text != blank %}
                <div class="timeline-highlight">
                  {{ block.settings.highlight_text }}
                </div>
              {% endif %}
            </div>
            
            {% assign image_position = block.settings.image_position %}
            {% if block.settings.image != blank or block.settings.image_2 != blank %}
              <div class="timeline-images {{ image_position }}">
                {% if block.settings.image != blank %}
                  <div class="timeline-image {{ block.settings.image_size }}">
                    <img src="{{ block.settings.image | image_url }}" 
                         alt="{{ block.settings.image.alt | default: block.settings.title }}"
                         loading="lazy">
                  </div>
                {% endif %}
                
                {% if block.settings.image_2 != blank %}
                  <div class="timeline-image {{ block.settings.image_size }}">
                    <img src="{{ block.settings.image_2 | image_url }}" 
                         alt="{{ block.settings.image_2.alt | default: block.settings.title }}"
                         loading="lazy">
                  </div>
                {% endif %}

                {% if block.settings.image_3 != blank %}
                  <div class="timeline-image {{ block.settings.image_size }}">
                    <img src="{{ block.settings.image_3 | image_url }}" 
                         alt="{{ block.settings.image_3.alt | default: block.settings.title }}"
                         loading="lazy">
                  </div>
                {% endif %}
              
              </div>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>

       <div class="button_center">
                    {%- if section.settings.button_label != blank -%}
            <a href="{{ section.settings.button_link }}" class="
                          size-style
                          button
                        ">
                        {{- section.settings.button_label | escape -}}
                      </a>
          {%- endif -%}
                  </div>
    
    {% if section.settings.bottom_text != blank %}
      <div class="timeline-footer">
        <p class="timeline-footer-text">{{ section.settings.bottom_text }}</p>
      </div>
    {% endif %}
  </div>
</div>

