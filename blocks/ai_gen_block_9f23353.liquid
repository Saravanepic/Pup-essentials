      height: {{ block.settings.arrow_size | times: 0.8 }}px;
    }

    .ai-testimonial-slider__arrow--prev-{{ ai_gen_id }} {
      left: 10px;
    }

    .ai-testimonial-slider__arrow--next-{{ ai_gen_id }} {
      right: 10px;
    }
  }
{% endstyle %}

<testimonial-slider-{{ ai_gen_id }}
  class="ai-testimonial-slider-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-testimonial-slider__container-{{ ai_gen_id }}">
    <div class="ai-testimonial-slider__track-{{ ai_gen_id }}">
      {% for i in (1..5) %}
        {% liquid
          assign testimonial_enabled_key = 'testimonial_' | append: i | append: '_enabled'
          assign testimonial_image_key = 'testimonial_' | append: i | append: '_image'
          assign testimonial_text_key = 'testimonial_' | append: i | append: '_text'
          assign testimonial_author_key = 'testimonial_' | append: i | append: '_author'
          assign testimonial_title_key = 'testimonial_' | append: i | append: '_title'

          assign testimonial_enabled = block.settings[testimonial_enabled_key]
          assign testimonial_image = block.settings[testimonial_image_key]
          assign testimonial_text = block.settings[testimonial_text_key]
          assign testimonial_author = block.settings[testimonial_author_key]
          assign testimonial_title = block.settings[testimonial_title_key]
        %}

        {% if testimonial_enabled %}
          <div class="ai-testimonial-slider__slide-{{ ai_gen_id }}" data-slide="{{ forloop.index0 }}">
            <div class="ai-testimonial-slider__image-container-{{ ai_gen_id }}">
              {% if testimonial_image %}
                <img
                  src="{{ testimonial_image | image_url}}"
                  alt="{{ testimonial_author | escape }}"
                  class="ai-testimonial-slider__image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="200"
                  height="200"
                >
              {% else %}
                <div class="ai-testimonial-slider__image-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>

            <div class="ai-testimonial-slider__content-{{ ai_gen_id }}">
              {% if testimonial_text != blank %}
                <div class="ai-testimonial-slider__text-{{ ai_gen_id }}">
                  "{{ testimonial_text }}"
                </div>
              {% endif %}

              {% if testimonial_author != blank %}
                <div class="ai-testimonial-slider__author-{{ ai_gen_id }}">
                  {{ testimonial_author }}
                </div>
              {% endif %}

              {% if testimonial_title != blank %}
                <div class="ai-testimonial-slider__title-{{ ai_gen_id }}">
                  {{ testimonial_title }}
                </div>
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    <button
      class="ai-testimonial-slider__arrow-{{ ai_gen_id }} ai-testimonial-slider__arrow--prev-{{ ai_gen_id }}"
      aria-label="Previous testimonial"
      data-direction="prev"
    >
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <polyline points="15,18 9,12 15,6"></polyline>
      </svg>
    </button>

    <button
      class="ai-testimonial-slider__arrow-{{ ai_gen_id }} ai-testimonial-slider__arrow--next-{{ ai_gen_id }}"
      aria-label="Next testimonial"
      data-direction="next"
    >
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <polyline points="9,18 15,12 9,6"></polyline>
      </svg>
    </button>
  </div>

  {% if block.settings.show_dots %}
    <div class="ai-testimonial-slider__dots-{{ ai_gen_id }}"></div>
  {% endif %}
</testimonial-slider-{{ ai_gen_id }}>

<script>
  (function() {
    class TestimonialSlider{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.totalSlides = 0;
      }

      connectedCallback() {
        this.track = this.querySelector('.ai-testimonial-slider__track-{{ ai_gen_id }}');
        this.slides = this.querySelectorAll('.ai-testimonial-slider__slide-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.ai-testimonial-slider__arrow--prev-{{ ai_gen_id }}');
        this.nextButton = this.querySelector('.ai-testimonial-slider__arrow--next-{{ ai_gen_id }}');
        this.dotsContainer = this.querySelector('.ai-testimonial-slider__dots-{{ ai_gen_id }}');

        this.totalSlides = this.slides.length;

        if (this.totalSlides <= 1) {
          this.prevButton.style.display = 'none';
          this.nextButton.style.display = 'none';
          if (this.dotsContainer) this.dotsContainer.style.display = 'none';
          return;
        }

        this.setupEventListeners();
        this.createDots();
        this.updateSlider();
      }

      setupEventListeners() {
        this.prevButton.addEventListener('click', () => this.goToSlide(this.currentSlide - 1));
        this.nextButton.addEventListener('click', () => this.goToSlide(this.currentSlide + 1));

        let startX = 0;
        let isDragging = false;

        this.track.addEventListener('touchstart', (e) => {
          startX = e.touches[0].clientX;
          isDragging = true;
        });

        this.track.addEventListener('touchmove', (e) => {
          if (!isDragging) return;
          e.preventDefault();
        });

        this.track.addEventListener('touchend', (e) => {
          if (!isDragging) return;
          isDragging = false;

          const endX = e.changedTouches[0].clientX;
          const diffX = startX - endX;

          if (Math.abs(diffX) > 50) {
            if (diffX > 0) {
              this.goToSlide(this.currentSlide + 1);
            } else {
              this.goToSlide(this.currentSlide - 1);
            }
          }
        });
      }

      createDots() {
        if (!this.dotsContainer) return;

        for (let i = 0; i < this.totalSlides; i++) {
          const dot = document.createElement('button');
          dot.className = 'ai-testimonial-slider__dot-{{ ai_gen_id }}';
          dot.setAttribute('aria-label', `Go to testimonial ${i + 1}`);
          dot.addEventListener('click', () => this.goToSlide(i));
          this.dotsContainer.appendChild(dot);
        }
      }

      goToSlide(slideIndex) {
        if (slideIndex < 0) {
          this.currentSlide = this.totalSlides - 1;
        } else if (slideIndex >= this.totalSlides) {
          this.currentSlide = 0;
        } else {
          this.currentSlide = slideIndex;
        }

        this.updateSlider();
      }

      updateSlider() {
        const translateX = -this.currentSlide * 100;
        this.track.style.transform = `translateX(${translateX}%)`;

        this.prevButton.disabled = false;
        this.nextButton.disabled = false;

        if (this.dotsContainer) {
          const dots = this.dotsContainer.querySelectorAll('.ai-testimonial-slider__dot-{{ ai_gen_id }}');
          dots.forEach((dot, index) => {
            dot.classList.toggle('active', index === this.currentSlide);
          });
        }
      }
    }

    customElements.define('testimonial-slider-{{ ai_gen_id }}', TestimonialSlider{{ ai_gen_id }});
  })();
</script>

