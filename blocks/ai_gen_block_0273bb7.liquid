{% doc %}
  @prompt
    Create a social icon link with option image and link url, Modiy it so i can have 5 options to pass 5 links and images

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-social-icons-container-{{ ai_gen_id }} {
    display: flex;
    flex-wrap: wrap;
    gap: {{ block.settings.spacing }}px;
    justify-content: {{ block.settings.alignment }};
  }

  .ai-social-icon-{{ ai_gen_id }} {
    display: inline-block;
    transition: transform 0.3s ease, opacity 0.3s ease;
  }

  .ai-social-icon-{{ ai_gen_id }}:hover {
    transform: scale({{ block.settings.hover_scale }});
    opacity: {{ block.settings.hover_opacity }};
  }

  .ai-social-icon-image-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    border-radius: {{ block.settings.border_radius }}px;
    display: block;
    object-fit: cover;
  }

  .ai-social-icon-placeholder-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    background-color: {{ block.settings.placeholder_color }};
    border-radius: {{ block.settings.border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-social-icon-placeholder-{{ ai_gen_id }} svg {
    width:60%;
    height: 60%;
    color: {{ block.settings.placeholder_icon_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-social-icons-container-{{ ai_gen_id }} {
      gap: {{ block.settings.mobile_spacing }}px;
    }
    .ai-social-icon-image-{{ ai_gen_id }},
    .ai-social-icon-placeholder-{{ ai_gen_id }} {
      width: {{ block.settings.mobile_icon_size }}px;
      height: {{ block.settings.mobile_icon_size }}px;
    }
  }
{% endstyle %}

<div class="ai-social-icons-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% for i in (1..5) %}
    {% liquid
      assign icon_image_key = 'icon_image_' | append: i
      assign link_url_key = 'link_url_' | append: i
      assign aria_label_key = 'aria_label_' | append: i
      
      assign icon_image = block.settings[icon_image_key]
      assign link_url = block.settings[link_url_key]
      assign aria_label = block.settings[aria_label_key]
    %}
    
    {% if icon_image != blank or link_url != blank %}
      {% if link_url != blank %}
        <a
          href="{{ link_url }}"
          class="ai-social-icon-{{ ai_gen_id }}"
          {% if block.settings.open_in_new_tab %}target="_blank" rel="noopener noreferrer"{% endif %}
          aria-label="{{ aria_label | default: 'Social media link' }}"
        >
      {% else %}
        <div class="ai-social-icon-{{ ai_gen_id }}">
      {% endif %}

      {% if icon_image %}
        <img
          src="{{ icon_image | image_url: width: 200 }}"
          alt="{{ icon_image.alt | escape }}"
          class="ai-social-icon-image-{{ ai_gen_id }}"
          width="{{ block.settings.icon_size }}"
          height="{{ block.settings.icon_size }}"
          loading="lazy"
        >
      {% else %}
        <div class="ai-social-icon-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
        </div>
      {% endif %}

      {% if link_url != blank %}
        </a>
      {% else %}
        </div>
      {% endif %}
    {% endif %}
  {% endfor %}
</div>

