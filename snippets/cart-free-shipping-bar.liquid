<style>
  :root {
      --max-shipping-value: 120;
      --current-shipping-value: {{ cart.total_price | divided_by: 100 }};
      --shipping-progress-percentage: calc((var(--current-shipping-value) / var(--max-shipping-value)) * 100%);
      --remaining-amount: calc(var(--max-shipping-value) - var(--current-shipping-value));
  }
  .shipping-container {
      background: white;
      padding: 0 30px 0;
      /* border-radius: 12px; */
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
      max-width: 500px;
      width: 100%;
      
  }

  .shipping-text {
      text-align: center;
      font-size: 11px;
      font-weight: 400;
      color: #000;
      font-family: 'GT America Trial';
      padding: 10px;
      border-top: 1px solid rgba(217, 217, 217, 1);
  }

  .amount {
      /* color: #e74c3c; */
      font-weight: bold;
  }

  .progress-bar-container {
      position: relative;
      width: 100%;
      height: 10px;
      background-color: #e0e0e0;
      border-radius: 25px;
      overflow: hidden;
      /* pading-bottom: 10px;
      border-bottom: 1px solid rgba(217, 217, 217, 1); */
      margin-bottom:10px;
  }

  .progress-bar-fill {
      height: 100%;
      background: linear-gradient(90deg, #2c3e50 0%, #34495e 90%);
      border-radius: 25px;
      width: var(--shipping-progress-percentage);
      transition: width 0.8s ease-in-out;
      position: relative;
  }

  .progress-info {
      display: flex;
      justify-content: space-between;
      font-size: 14px;
      color: #666;
      margin-top: 8px;
  }

  .free-shipping-achieved {
      /* background: linear-gradient(90deg, #27ae60 0%, #2ecc71 100%) !important; */
        background: #C6A877;
    border: 1px solid black;
  }

  .achievement-message {
      text-align: center;
      /* color: #27ae60;
      font-weight: bold;
      font-size: 13px; */
    font-family: 'GT America Trial';
    font-weight: 400;
    font-size: 11px;
    letter-spacing: 0;
    text-align: center;
    margin:0 0 10px;
      height:0;
      opacity: 0;
      transition: opacity 0.3s ease;
      display:none;
      
  }

  .achievement-message.show {
      opacity: 1;
      height:auto;
      display:block;
  }
</style>
<div class="shipping-container">
    <div class="shipping-text">
        You're <span class="amount">{{ cart.currency.symbol }}<span id="remaining-amount"></span></span> away from FREE SHIPPING!
    </div>

    <div class="achievement-message" id="achievement-msg">
        Congrats! You get FREE SHIPPING! 
    </div>
    
    <div class="progress-bar-container">
        <div class="progress-bar-fill" id="progress-fill"></div>
    </div>
    
    
</div>
